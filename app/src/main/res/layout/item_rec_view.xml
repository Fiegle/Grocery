<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Item_Name"
        android:id="@+id/edtItem_Name_rec"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/edtItem_Name_rec"
        android:paddingLeft="20sp"
        android:hint="Amount"
        android:id="@+id/edtAmount_rec"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/edtAmount_rec"
        android:paddingLeft="20sp"
        android:hint="Type"
        android:id="@+id/edtType_rec"/>


</android.support.constraint.ConstraintLayout>